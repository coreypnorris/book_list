<ol class='breadcrumb'>
  <li class='active'>Books</a>
</ol>
<ul class="list-unstyled">
  {{#each}}
    <li class="row">
      <div class="col-sm-3">
        <a {{bind-attr href='url'}}>
          <img {{bind-attr src='image'}} class="img-thumbnail" />
        </a>
        <p class='text-center rating'><strong>{{rating}}</strong>/5</p>
      </div>

      <div class='col-sm-9'>
        <h3>{{#link-to 'book' this}}{{name}}{{/link-to}}</h3>
        <p class='text-muted'><em>Written by {{author}}</em></p>

        <div>
          <p>{{review}}</p>
        </div>
      </div>
    </li>
  {{/each}}
</ul>
