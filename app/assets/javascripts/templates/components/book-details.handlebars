<div class="col-sm-3">
  <a {{bind-attr href='book.url'}}>
    <img {{bind-attr src='book.image'}} class="img-thumbnail" />
  </a>
  <p class='text-center rating'><strong>{{book.rating}}</strong>/5</p>
</div>

<div class='col-sm-9'>
  <h3>{{#link-to 'book' book}}{{book.name}}{{/link-to}}</h3>
  <p class='text-muted'><em>Written by {{book.author}}</em></p>

  <div>
    <p>{{book.review}}</p>
  </div>
  <p>{{book.genre.name}}</p>
</div>
